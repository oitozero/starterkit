<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%= page_title %></title>
        <%- stylesheetLinkTag('bootstrap', 'bootstrap-responsive', 'application') %>
        <%- javascriptIncludeTag('jquery', 'bootstrap', 'rails', 'application', 'app', 'socialSharers') %>
        <%- csrfMetaTag() %>
        <meta charset="utf8">
        <meta name="viewport" content="initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0">
    </head>
    <body>
        <div class="container-narrow">

          <div class="masthead">
            <h3 class="muted"><%= header_title %></h3>
          </div>

          <hr>
            
            <%- body %>

          <hr>

          <div class="footer">
            <p>&copy; <%= footer_title %> <% var d=new Date();%><%= d.getFullYear() %></p>
          </div>

        </div>
    </body>
</html>
<%- contentFor('javascripts') %>
